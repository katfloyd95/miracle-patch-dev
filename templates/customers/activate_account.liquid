<section class="section">
  <a name="pagecontent" id="pagecontent"></a>
  <div class="container has-padding-top has-padding-bottom">

    <div class="one-whole column collection_nav">
      <h1>{{ 'customer.activate_account.title' | t }}</h1>
      <div class="feature_divider"></div>
    </div>

    <div class="one-half column medium-down--one-whole offset-by-four is-hidden-offset-mobile-only">
      <p><em>{{ 'customer.activate_account.subtext' | t }}</em></p>

      {% form 'activate_customer_password' %}
        {{ form.errors | default_errors }}

        <div id="password">
          <label for="password">{{ 'customer.activate_account.password' | t }}</label>
          <input type="password" value="" name="customer[password]" id="customer_password" class="password" size="16" />
        </div>

        <div id="password_confirm">
          <label for="password_confirmation">{{ 'customer.activate_account.password_confirm' | t }}</label>
          <input type="password" value="" name="customer[password_confirmation]" id="customer_password_confirmation" class="password" size="16" />
        </div>

        <input class="global-button global-button--primary" type="submit" value="{{ 'customer.activate_account.submit' | t }}" />
        <input type="submit" class="cancel button" name="decline" id="customer_decline" value="{{ 'customer.activate_account.cancel' | t }}" />
      {% endform %}
    </div>

    <br />
    <br />
  </div>
</section>
