<script
  type="application/json"
  data-section-type="testimonial"
  data-section-id="{{ section.id }}"
>
</script>

{%- assign id = section.id -%}

{% comment %} Content settings {% endcomment %}
{%- assign blocks = section.blocks -%}
{% comment %} End content settings {% endcomment %}

{% comment %} Is the color set to transparent? {% endcomment %}
{%- assign mobile_text_alpha = section.settings.mobile_text_color | default: 'rgba(0,0,0,0)' | color_extract: 'alpha' -%}

{% comment %} Advanced {% endcomment %}
{%- assign css_class = section.settings.css_class -%}
{%- assign custom_css = section.settings.custom_css -%}

{% comment %} Section specific CSS {% endcomment %}
<style>
  {%
    render 'css-loop',
    css: custom_css,
    id: id
  %}

  {% if section.settings.mobile_text_below_image and mobile_text_alpha != 0 %}
    @media only screen and (max-width: 480px) {
      #shopify-section-{{ section.id }} .pretext,
      #shopify-section-{{ section.id }} .headline,
      #shopify-section-{{ section.id }} .subtitle {
        color: {{ section.settings.mobile_text_color }};
      }

      #shopify-section-{{ section.id }} .feature_divider {
        border-color: {{ section.settings.mobile_text_color }};
      }
    }
  {% endif %}
</style>

{% if blocks.size > 0 %}
  <section
    class="
      section
      {% if section.settings.wide_display == true %}
        is-width-wide
        has-no-side-gutter
      {% endif %}
      {{ css_class }}
    "
  >
    <div class="container">
      <div class="one-whole column">
        <div id="testimonial-{{ section.id }}" class="testimonial-slideshow js-testimonial {% if section.settings.testimonial_text_animation != '' %}text-animation--true{% endif %} transparentBackground--{{ settings.slideshow_button_style }} full-width--{{ section.settings.wide_display }}" data-slider-id="testimonial-{{ section.id }}" data-slideshow-speed="{{ section.settings.testimonial_speed }}" data-slideshow-text-animation="{{ section.settings.testimonial_text_animation }}" data-adaptive-height="{{ section.settings.activate_adaptiveHeight }}">
          {% for block in blocks %}
            {% comment %} Content settings {% endcomment %}
            {%- assign testimonial = block.settings.testimonial -%}
            {%- assign background_style = block.settings.caption_content_background -%}
            {%- assign mobile_crop = 'mobile-banner--crop-' | append: block.settings.mobile_image_crop -%}
            {% comment %} End content settings {% endcomment %}

            <div class="testimonial-block gallery-cell slide-{{ forloop.index }} {% if block.settings.image == blank %}set-static testimonial-block--no-image{% endif %} caption-background-{{ background_style }} caption--below-{{ section.settings.mobile_text_below_image }}" {{ block.shopify_attributes }} data-block-id="{{ block.id }}">
              {%- assign image = block.settings.image -%}
              {%- assign mobile_image = block.settings.mobile_image -%}

              {% if image %}
                {% if mobile_image %}
                  <div class="is-hidden-mobile-only">
                {% endif %}
                  {%
                    render 'image-element',
                    image: image,
                    alt: image.alt,
                    stretch_width: true,
                    additional_classes: mobile_crop
                  %}

                  {% if background_style == 'darken_bg' %}
                    <div class="darken-bg"></div>
                  {% endif %}
                {% if mobile_image %}
                  </div>
                  <div class="is-hidden-desktop-only">
                    {%
                      render 'image-element',
                      image: mobile_image,
                      alt: mobile_image.alt,
                      stretch_width: true,
                      additional_classes: mobile_crop
                    %}
                    {% if background_style == 'darken_bg' %}
                      <div class="darken-bg"></div>
                    {% endif %}
                  </div>
                {% endif %}
              {% endif %}

              <div class="caption position-{{ block.settings.text_position }} js-caption">
                <div class="caption-content testimonial-text {% if image != blank %}testimonial-text-mobile{% endif %} align-{{ block.settings.text_align }}">
                  {% if block.settings.title != blank %}
                    <p class="headline">{{ block.settings.title }}</p>
                    <div class="feature_divider"></div>
                  {% endif %}

                  <div class="subtitle">
                    {{ testimonial }}

                    <p>
                      {% if block.settings.name != blank %}
                        {{ block.settings.name }}<br>
                      {% endif %}

                      {% if block.settings.store_name != blank %}
                        {% if block.settings.link != blank %}<a href="{{ block.settings.link }}">{% endif %}
                        <strong>{{ block.settings.store_name }}</strong>
                        {% if block.settings.link != blank %}</a>{% endif %}
                      {% endif %}
                    </p>
                  </div>
                </div>
              </div>
            </div>
          {% endfor %}
        </div>
      </div>
    </div>
  </section>
{% endif %}

